<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="@dimen/activity_margin_medium_large"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/linearPodcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_title_podcast"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:gravity="start"
            android:textColor="@color/black_low"
            android:paddingStart="@dimen/activity_margin_small_medium"
            android:textStyle="bold"
            android:textSize="@dimen/my_history_value"
            android:layout_height="wrap_content"
            tools:ignore="RtlSymmetry" />


        <ProgressBar
            android:id="@+id/progressList"
            style="?android:attr/progressBarStyle"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:indeterminateDrawable="@drawable/loading_gradient"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/buttonPlay"
            android:layout_width="0dp"
            android:background="@drawable/button_play"
            android:paddingEnd="@dimen/activity_margin_small_medium"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="gone"
            android:layout_height="wrap_content"
            tools:ignore="RtlSymmetry" />

        <Button
            android:id="@+id/buttonPause"
            android:layout_width="0dp"
            android:background="@drawable/button_pause"
            android:paddingEnd="@dimen/activity_margin_small_medium"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>


    <View
        android:id="@+id/divider_bottom"
        android:layout_width="match_parent"
        android:layout_below="@+id/linearPodcast"
        android:layout_height="3dp"
        android:layout_marginTop="@dimen/activity_margin_small"
        android:layout_marginStart="@dimen/activity_margin_small_medium"
        android:layout_marginEnd="@dimen/activity_margin_small_medium"
        android:background="@color/brown_my_history" />

</RelativeLayout>