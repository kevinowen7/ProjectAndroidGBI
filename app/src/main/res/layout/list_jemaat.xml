<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="@dimen/activity_margin_medium_large"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/linearPodcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile_pic"
            android:background="@drawable/rounded_form"
            android:layout_margin="@dimen/activity_margin_small_medium"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/list_nama"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/black_low"
                android:paddingStart="@dimen/activity_margin_small_medium"
                android:textStyle="bold"
                android:textSize="@dimen/sub_form"
                android:layout_height="wrap_content"
                tools:ignore="RtlSymmetry" />
            <TextView
                android:id="@+id/list_username"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/black_low"
                android:paddingStart="@dimen/activity_margin_small_medium"
                android:textStyle="bold"
                android:textSize="@dimen/sub_form_value"
                android:layout_height="wrap_content"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

    </LinearLayout>


    <View
        android:id="@+id/divider_bottom"
        android:layout_width="match_parent"
        android:layout_below="@+id/linearPodcast"
        android:layout_height="3dp"
        android:layout_marginTop="@dimen/activity_margin_small"
        android:layout_marginStart="@dimen/activity_margin_small_medium"
        android:layout_marginEnd="@dimen/activity_margin_small_medium"
        android:background="@color/brown_my_history" />

</RelativeLayout>